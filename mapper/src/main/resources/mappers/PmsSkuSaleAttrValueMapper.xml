<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scorpion.mapper.PmsSkuSaleAttrValueMapper">
  <resultMap id="BaseResultMap" type="com.scorpion.entity.PmsSkuSaleAttrValue">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="sku_id" jdbcType="BIGINT" property="skuId" />
    <result column="attr_id" jdbcType="BIGINT" property="attrId" />
    <result column="attr_name" jdbcType="VARCHAR" property="attrName" />
    <result column="attr_value" jdbcType="VARCHAR" property="attrValue" />
    <result column="attr_sort" jdbcType="INTEGER" property="attrSort" />
  </resultMap>
    <select id="selectSkuSaleAttrValueBySkuId" resultMap="BaseResultMap">
      SELECT
        id,
        sku_id,
        attr_id,
        attr_name,
        attr_value,
        attr_sort
      FROM
        pms_sku_sale_attr_value
      WHERE
        sku_id IN (#{skuId})

      <if test="attr_sort!=null">
      order by attr_sort
      </if>
    </select>
</mapper>