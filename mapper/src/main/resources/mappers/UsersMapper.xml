<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scorpion.mapper.UsersMapper">
  <resultMap id="BaseResultMap" type="com.scorpion.entity.Users">
    <id column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="user_name" jdbcType="VARCHAR" property="userName" />
    <result column="nick_name" jdbcType="VARCHAR" property="nickName" />
    <result column="user_intro" jdbcType="VARCHAR" property="userIntro" />
    <result column="avatra" jdbcType="VARCHAR" property="avatra" />
    <result column="email" jdbcType="VARCHAR" property="email" />
    <result column="phone_number" jdbcType="VARCHAR" property="phoneNumber" />
    <result column="user_sex" jdbcType="CHAR" property="userSex" />
    <result column="user_birthday" jdbcType="DATE" property="userBirthday" />
    <result column="user_password" jdbcType="VARCHAR" property="userPassword" />
    <result column="password_salt" jdbcType="VARCHAR" property="passwordSalt" />
    <result column="user_status" jdbcType="VARCHAR" property="userStatus" />
    <result column="user_score" jdbcType="INTEGER" property="userScore" />
    <result column="total_cost_amt" jdbcType="DECIMAL" property="totalCostAmt" />
    <result column="last_login_time" jdbcType="TIMESTAMP" property="lastLoginTime" />
    <result column="open_id" jdbcType="VARCHAR" property="openId" />
    <result column="union_id" jdbcType="VARCHAR" property="unionId" />
    <result column="created_by" jdbcType="VARCHAR" property="createdBy" />
    <result column="created_time" jdbcType="TIMESTAMP" property="createdTime" />
    <result column="updated_by" jdbcType="VARCHAR" property="updatedBy" />
    <result column="updated_time" jdbcType="TIMESTAMP" property="updatedTime" />
  </resultMap>
  <resultMap id="userVoMap" type="com.scorpion.entity.UserVO">
    <id column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="nick_name" jdbcType="VARCHAR" property="nickName" />
    <result column="user_intro" jdbcType="VARCHAR" property="userIntro" />
    <result column="avatra" jdbcType="VARCHAR" property="avatra" />
  </resultMap>
    <select id="selectList" resultMap="userVoMap">
      select 
        user_id,
        nick_name,
        user_intro,
        avatra
      from
        users
      <where>
        <foreach collection="list" item="item" index="index"  open="user_id in (" separator="," close=")">
        #{item}
        </foreach>
      </where>
    </select>
  <select id="selectListBykeyWord" resultMap="userVoMap">
    select
    user_id,
    nick_name,
    user_intro,
    avatra
    from
    users
    <where>
      <foreach collection="list" item="item" index="index"  open="user_id in (" separator="," close=")">
        #{item}
      </foreach>
    <if test="keyWord!=null and keyWord!=''">
      and nick_name like #{keyWord}
    </if>
    </where>
  </select>
</mapper>